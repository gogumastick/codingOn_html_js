<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
</head>
<body>
    <form>
        <label for="userid">ID</label>
        <input type="text" id="userid" required />
        <br />
        <label for="pw">패쓰워드</label>
        <input type="password" , id="pw" required />
        <br />
        <button type="button" onclick="login()">로그인</button>
        <button type="button"><a href="register.ejs">회원가입</a></button>
    </form>
    <br />
    <br />
    <div class="resultBox"></div>
    <script>
        const resultBox = document.querySelector('.resultBox');
        function login() {
            const data = {
                id: document.querySelector('#userid').value,
                pw: document.querySelector('#pw').value,
            };
            axios({
                method: 'POST',
                url: '/index',
                data,
            }).then((value) => {
                console.log('value', value);
                const { result, userId } = value.data;
                if (result) {
                    resultBox.textContent = `${userId}님 환영합니다.`;
                    resultBox.style.color = 'blue';
                } else {
                    resultBox.textContent = '아이디 또는 패쓰워드가 틀렸습니다';
                    resultBox.style.color = 'red';
                }
            });
        }
    </script>
</body>
</html>