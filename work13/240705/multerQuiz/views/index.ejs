<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form>
        
        <input type="text" id="id" placeholder="아이디"/><br />
        <input type="password" id="password" placeholder="비밀번호"/><br />
        <input type="text" id="myName" placeholder="이름"/><br />
        <input type="number" id="age" placeholder="나이"/><br />
        <input type="file" id="userfile" /><br />
        <button type="button" onclick="fileUpload()">업로드</button>
    </form>
    <br />
    <br />
    <div class="resultBox"></div>
    <script>
        const resultBox = document.querySelector('.resultBox');
        function fileUpload() {
            const file = document.querySelector('#userfile');
            //파일에 접근하기 위해서 변수.files를 사용하고
            //여기서 file.files는 배열을 반환하며 우리가 원하는 값은
            //첫번째 요소로 반환되기 때문에 file.files[0]만 사용함
            console.log(file.files[0]);

            //FormData: 자바스트립트 내장객체이고 폼데이터를 생성해줌
            const formData = new FormData();
            //append(key, value)
            //파일들은 항상 마지막에 선언
            formData.append('title', document.querySelector('#title').value);
            formData.append('userfile', file.files[0]);

            axios({
                method: 'POST',
                url: '/upload/axios',
                data: formData,
                headers: {
                    'Content-Type': 'multipart/form-data',
                },
            }).then((res) => {
                console.log('res', res);
                const file = res.data.file.path;
                const title = res.data.title.title;
                resultBox.innerHTML = `<p>이름은 ${title}</p><img src=${file}>`;
            });
        }
    </script>
</body>
</html>